<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/FUBwidth"
    android:background="@color/primaryColor"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/FBBImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:maxHeight="48dp"
        android:scaleType="fitCenter"
        android:paddingStart="16dp"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/FUBLevelBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/FBBImage"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp" >

        <TextView
            android:id="@+id/FBBDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FUBLevel"
            android:textColor="@color/textPrimaryColor"
            android:textSize="12sp" />

        <com.oym.indoor.navigation.views.TextViewBold
            android:id="@+id/FBBInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FBBDistance"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/FUBLevel"
            android:textColor="@color/textPrimaryColor"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>